{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat/types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "hardhat.config.ts",
    "deploy/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "tasks/**/*.ts",
    "types/**/*.d.ts"
  ]
}




